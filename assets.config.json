{
  "general": {    
    "sourceFolder": "src/assets",
    "outputFolder": "src/bin",
    "entrypoint": "build/js/index.js",
    "types": {
      "high": {
        "scaleFactor": 1,
        "quality": 100,
        "speed": 1
      },
      "hd": {
        "scaleFactor": 0.75,
        "quality": 75,
        "speed": 1
      },
      "medium": {
        "scaleFactor": 0.5,
        "quality": 50,
        "speed": 1
      },
      "low": {
        "scaleFactor": 0.25,
        "quality": 25,
        "speed": 1
      }
    }
  },
  "atlases": {
    "atlasesOutputFolder": "atlases",
    "removeSingleImages": false,
    "extensions": [
      "jpg",
      "png"
    ],
    "packerParams": {
      "padding": 1,
      "width": 3000,
      "height": 3000,
      "fixedSize": false,
      "allowRotation": true,
      "detectIdentical": true,
      "allowTrim": false,
      "exporter": "JsonArray",
      "removeFileExtension": false,
      "prependFolderName": true,
      "packer": "OptimalPacker"
    }
  },
  "groups": {
    "groupName": "atlasLoadGroup.js",
    "groupPath": "src/app/templates/groups"
  },
  "audio": {
    "sourceFolder": "src/assets/sounds",
    "output": "src/bin/sounds",
    "silence": 1,
    "format": "howler",
    "types": {
      "desktop": {
        "output": "audiosprite"
      },
      "mobile": {
        "output": "mobile/audiosprite",
        "optimizations": {
          "bitrate": 44,
          "samplerate": 22050,
          "channels": 1
        }
      }
    }
  }
}
